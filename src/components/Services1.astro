---
import Excursions from './icons/excursions.astro'
import Transportation from './icons/transportation.astro'
import Transfers from './icons/transfers.astro'
import { getLangFromUrl, useTranslations } from '../i18n/utils.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const services = t('services');
---
<section class="max-w-7xl mx-auto px-6 py-12 lg:py-16" id="services">
  <div class="text-center mb-12">
    <h2 class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-emerald-500 to-teal-600 mb-4 leading-relaxed tracking-tightest font-kerning-auto letter-spacing-wide pb-1">
      {services.h2}
    </h2>
    <div class="w-20 h-1 mx-auto bg-gradient-to-r from-emerald-400 to-teal-500 rounded-full mb-4"></div>
    <p class="mt-3 text-gray-700 max-w-2xl mx-auto text-base sm:text-lg px-3 sm:px-0 font-semibold">
      {services.p}
    </p>
  </div>
  
  <div class="grid md:grid-cols-3 gap-5">

    <div class="bg-gradient-to-br from-emerald-900/70 to-emerald-950/70 dark:from-emerald-900/80 dark:to-emerald-950/80 backdrop-blur-lg rounded-2xl p-6 shadow-lg hover:shadow-xl group relative overflow-hidden transition-all duration-300 ease-in-out">
      
      <div class="transform transition-transform duration-300 ease-in-out group-hover:-translate-y-2 relative z-10">
        <div class="w-14 h-14 mb-4 bg-gradient-to-br from-emerald-400/30 to-emerald-600/30 dark:from-emerald-600/30 dark:to-emerald-800/30 rounded-xl flex items-center justify-center mx-auto backdrop-blur-lg">
          <Excursions class="w-9 h-9 stroke-white"/>
        </div>
        <h3 class="text-lg font-semibold text-center text-white dark:text-white mb-3">
          {services.serv1h4}
        </h3>
        <p class="text-white/90 dark:text-white text-center leading-relaxed">
          {services.serv1p}
        </p>
      </div>

      <div class="absolute inset-0 z-0">
        <img 
          src="/images/Excursions.jpg" 
          alt="Fondo"
          class="w-full h-full object-cover" 
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
      </div>
      
      <div class="absolute inset-0 bg-gradient-to-br from-transparent via-emerald-500/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none z-10"></div>
    </div>

    <div class="bg-gradient-to-br from-emerald-900/70 to-emerald-950/70 dark:from-emerald-900/80 dark:to-emerald-950/80 backdrop-blur-lg rounded-2xl p-6 shadow-lg hover:shadow-xl group relative overflow-hidden transition-all duration-300 ease-in-out">
      <div class="transform transition-transform duration-300 ease-in-out group-hover:-translate-y-2 relative z-10">
        <div class="w-14 h-14 mb-4 bg-gradient-to-br from-emerald-400/30 to-emerald-600/30 dark:from-emerald-600/30 dark:to-emerald-800/30 rounded-xl flex items-center justify-center mx-auto backdrop-blur-lg">
          <Transportation class="w-9 h-9 stroke-white"/>
        </div>
        <h3 class="text-lg font-semibold text-center text-white dark:text-white mb-3">
          {services.serv2h4}
        </h3>
        <p class="text-white/90 dark:text-white text-center leading-relaxed">
          {services.serv2p}
        </p>
      </div>

      <div class="absolute inset-0 z-0">
        <img 
          src="/images/Car2.jpg"
          alt="Transporte"
          class="w-full h-full object-cover" 
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
      </div>
      
      <div class="absolute inset-0 bg-gradient-to-br from-transparent via-emerald-500/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none z-10"></div>
    </div>

    <div class="bg-gradient-to-br from-emerald-900/70 to-emerald-950/70 dark:from-emerald-900/80 dark:to-emerald-950/80 backdrop-blur-lg rounded-2xl p-6 shadow-lg hover:shadow-xl group relative overflow-hidden transition-all duration-300 ease-in-out">
      <div class="transform transition-transform duration-300 ease-in-out group-hover:-translate-y-2 relative z-10">
        <div class="w-14 h-14 mb-4 bg-gradient-to-br from-emerald-400/30 to-emerald-600/30 dark:from-emerald-600/30 dark:to-emerald-800/30 rounded-xl flex items-center justify-center mx-auto backdrop-blur-lg">
          <Transfers class="w-9 h-9 stroke-white"/>
        </div>
        <h3 class="text-lg font-semibold text-center text-white dark:text-white mb-3">
          {services.serv3h4}
        </h3>
        <p class="text-white/90 dark:text-white text-center leading-relaxed">
          {services.serv3p}
        </p>
      </div>

      <div class="absolute inset-0 z-0">
        <img 
          src="/images/Transfers.jpeg"
          alt="Traslados"
          class="w-full h-full object-cover" 
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
      </div>
      
      <div class="absolute inset-0 bg-gradient-to-br from-transparent via-emerald-500/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none z-10"></div>
    </div>
  </div> 
</section>